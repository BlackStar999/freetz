###
### hardware / software components related properties
###

config FREETZ_TYPE_CABLE
	bool
	default y
	depends on \
		FREETZ_TYPE_6490 || \
		FREETZ_TYPE_6590

config FREETZ_TYPE_DSL
	bool
	default y
	depends on \
		(!FREETZ_TYPE_CABLE && !FREETZ_TYPE_LTE) || \
		FREETZ_TYPE_6890

config FREETZ_TYPE_LTE
	bool
	default y
	depends on \
		FREETZ_TYPE_6810 || \
		FREETZ_TYPE_6820 || \
		FREETZ_TYPE_6840 || \
		FREETZ_TYPE_6842 || \
		FREETZ_TYPE_6890

