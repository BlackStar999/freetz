config FREETZ_AVM_SERIAL_CONSOLE_DEVICE
	string
	default "/dev/ttyS1"           if FREETZ_SYSTEM_TYPE_AR9
	default "/dev/ttyLTQ0"         if FREETZ_SYSTEM_TYPE_GRX5
	default "/dev/ttyMSM0"         if FREETZ_SYSTEM_TYPE_IPQ40xx
	default "/dev/ttyS0"
	help
		Serial console device used in the original firmware.



